#/bin/env bash

set -ex


DOCKER_TAG="rpi-lights"


command="$1"; shift
case $command in
    broker)
        echo "Running mosquitto mqtt broker"
        if [ ! -d .data ]; then
            mkdir .data
        fi

        docker run -d --rm \
            --name panel-mqtt \
            -p 1883:1883 \
            -v $(pwd)/docker/config/mqtt/mosquitto.conf:/mosquitto/config/mosquitto.conf \
            -v $(pwd)/.data/mosquitto:/mosquitto/data \
            eclipse-mosquitto
        ;;
    build)
        echo "Building image"
        target="$1"
        if [ -z "$target" ]; then
            echo "You must speficy a target [dev|prod]"
            exit 1
        fi
        docker build --target $target -t $DOCKER_TAG -f docker/Dockerfile .
        ;;
    script)
        echo "Running script /app/scripts/$1"
        docker run -it --rm --network host -v $(pwd)/scripts:/app/scripts -v $(pwd)/src:/app/src $DOCKER_TAG python -i /app/scripts/$1
        ;;
    prod)
        echo "Stopping existing installation, if it exists"
        docker kill electrical-panel || true
        docker rm electrical-panel || true
        echo "Starting prod server"
        docker run -d --name electrical-panel --restart always -it --network host --device /dev/i2c-1 -v $(pwd)/src:/app/src $DOCKER_TAG python main.py
        ;;
    test)
        loop=false
        args=
        while [ $# -gt 0 ]; do
            arg="$1"; shift
            case $arg in
                --loop)
                    loop=true
                    ;;
                *)
                    args="$args $arg"
                    ;;
            esac
        done

        if [ "$loop" = true ]; then
            echo "Running tests in a loop"
            find ./src -name \*.py | entr docker run -it --rm --network host -v $(pwd)/src:/app/src $DOCKER_TAG python -m pytest -s .
        else
            docker run -it --rm --network host -v $(pwd)/src:/app/src $DOCKER_TAG python -m pytest -s .
        fi
        ;;
    shell)
        echo "Starting shell"
        docker run -it --rm --network host --device /dev/i2c-1 -v $(pwd)/src:/app/src $DOCKER_TAG bash
        ;;
    *)
        echo "No known command $command"
        ;;
esac
